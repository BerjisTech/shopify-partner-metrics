<p id="notice"><%= notice %></p>

<h1>App Plans</h1>

<table>
  <thead>
    <tr>
      <th>App</th>
      <th>Plan name</th>
      <th>Plan price</th>
      <th>Plan trial price</th>
      <th>Trial days</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @app_plans.each do |app_plan| %>
      <tr>
        <td><%= app_plan.app_id %></td>
        <td><%= app_plan.plan_name %></td>
        <td><%= app_plan.plan_price %></td>
        <td><%= app_plan.plan_trial_price %></td>
        <td><%= app_plan.trial_days %></td>
        <td><%= link_to 'Show', app_plan %></td>
        <td><%= link_to 'Edit', edit_app_plan_path(app_plan) %></td>
        <td><%= link_to 'Destroy', app_plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New App Plan', new_app_plan_path %>
