<div class="row">
  <div class="col-sm-1"></div>
  <div class="col-sm-10">
    <div class="row">
      <div class="col-sm-4">
        <div class="shadow bg-white rounded-3 border p-4">
          <p>
            <strong>Platform:</strong>
            <%= @third_party_api.name %>
          </p>

          <p>
            <strong>Api key:</strong>
            <%= @third_party_api.api_key %>
          </p>

          <p>
            <strong>Api secret:</strong>
            <%= @third_party_api.api_secret %>
          </p>

          <p>
            <strong>Secondary api key:</strong>
            <%= @third_party_api.secondary_api_key %>
          </p>

          <p>
            <strong>Secondary api secret:</strong>
            <%= @third_party_api.secondary_api_secret %>
          </p>

          <%- if  @third_party_api.name == 'Shopify' %>
            <p>
              <strong>Partner ID:</strong>
              <%= @third_party_api.partner_id %>
            </p>

            <p>
              <strong>App Code:</strong>
              <%= @third_party_api.app_code %>
            </p>
          <% end %>

          <%= link_to 'Edit', edit_third_party_api_path(@third_party_api.id) %> |
          <%= link_to 'Back', third_party_apis_path %>
        </div>
      </div>
      <div class="col-sm-8">
        <%= render "third_party_apis/setup/#{@third_party_api.name.downcase}" %>
      </div>
    </div>
  </div>
  <div class="col-sm-1"></div>
</div>
