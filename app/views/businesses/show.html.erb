<div class="row">
  <div class="col-sm-1"></div>
  <div class="col-sm-10">
    <div class="row">
      <div class="col-sm-2">
        <div class="shadow bg-white rounded-3 border p-4">
          <p>
            <strong>Business name:</strong>
            <%= @business.business_name %>
          </p>

          <p>
            <strong>Industry:</strong>
            <%= @business.name %>
          </p>
          <%= link_to 'Edit Business', edit_business_path(@business.id) %>
        </div>
      </div>
      <div class="col-sm-8">
        <div class="shadow bg-white rounded-3 border p-4">
          <%= render "apps/data/all"%>
        </div>
      </div>
      <div class="col-sm-2">
        <div class="shadow bg-white rounded-3 border p-4 d-flex flex-column align-items-end">
          <%= link_to "Invite Staff", new_staff_path %>
          <table class="table mt-3">
            <% @staff.map do |staff| %>
              <tr>
                <td><%= staff.email %></td>
                <td>
                  <span class="material-icons text-danger" titile="Remove <%= staff.email %> from <%= @business.business_name %>">delete_forever</span>
                </td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="col-sm-1"></div>
</div>
