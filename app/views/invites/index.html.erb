<p id="notice"><%= notice %></p>

<h1>Invites</h1>

<table>
  <thead>
    <tr>
      <th>Business</th>
      <th>Recepient</th>
      <th>Sender</th>
      <th>Limit</th>
      <th>Accepts</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invites.each do |invite| %>
      <tr>
        <td><%= invite.business_id %></td>
        <td><%= invite.recepient %></td>
        <td><%= invite.sender %></td>
        <td><%= invite.limit %></td>
        <td><%= invite.accepts %></td>
        <td><%= invite.status %></td>
        <td><%= link_to 'Show', invite %></td>
        <td><%= link_to 'Edit', edit_invite_path(invite) %></td>
        <td><%= link_to 'Destroy', invite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Invite', new_invite_path %>
