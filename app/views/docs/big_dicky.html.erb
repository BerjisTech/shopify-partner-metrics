<div class="d-flex align-items-center justify-content-center bg-primary pt-5 pb-3">
</div>
<div class="d-flex align-items-start justify-content-start">
  <div class="d-flex flex-column flex-shrink border-end" style="min-height: 100vh; min-width: 200px;">
    <% Doc.all.map do |doc| %>
      <%= link_to doc.topic.classify, doc_path(doc.id), class: "nav-link" %>
    <% end %>
  </div>
  <div class="d-flex flex-column flex-fill mx-3 px-3" id="docs">
    <div class="text-center col-12 fs-2 my-5">Setting Up Your Apps</div>
    <div class="row">
      <% Doc.where(docs_category_id: DocsCategory.find_by(name: "Setup").id).limit(3).map do |doc| %>
        <div class="col-sm-4" onclick="window.location.href = '<%= doc_path(doc.id) %>'">
          <div class="bg-white shadow rounded border p-2 pointer">
            <div class="fs-4"><%= doc.topic %></div>
            <hr />
            <div class="fs-6"><%= ActionView::Base.full_sanitizer.sanitize(doc.description)[0..215] %>...</div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="text-center col-12 fs-2 my-5">Most Viewed</div>
    <div class="row">
      <% Doc.order(requests: :desc).limit(3).map do |doc| %>
        <div class="col-sm-4" onclick="window.location.href = '<%= doc_path(doc.id) %>'">
          <div class="bg-white shadow rounded border p-2 pointer">
            <div class="fs-4"><%= doc.topic %></div>
            <hr />
            <div class="fs-6"><%= ActionView::Base.full_sanitizer.sanitize(doc.description)[0..215] %>...</div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
