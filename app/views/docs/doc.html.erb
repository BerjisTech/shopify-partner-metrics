<div class="py-5 bg-primary"></div>
<div class="container">
  <div class="row">
    <div class="col-sm-2" style="min-height: 100vh;">
      <% Doc.all.map do |doc| %>
        <%= link_to doc.topic.classify, doc_path(doc.id), class: "nav-link" %>
      <% end %>
    </div>
    <div class="col-sm-10 px-5 py-3">
      <div class="fs-4"><%= @doc.topic %></div>
      <hr />
      <div class="fs-6"><%= @doc.description.html_safe %></div>
    </div>
  </div>
</div>
