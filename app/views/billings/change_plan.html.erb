<div class="row">
  <div class="col-sm-1"></div>
  <div class="col-sm-10">
    <div class="row">
      <div class="col-sm-5">
        <div class="bg-white rounded border shadow p-3">
          <div class="d-flex flex-column">
            <span class="fs-3">Current Plan</span>
            <span><%= @current_plan.name %></span>
            <hr />
            <span class="d-flex align-items-center justify-content-between"><span>PRICE</span><span class="fs-4">$<%= @current_plan.price/100 %></span></span>
            <span class="my-1 d-flex align-items-center justify-content-between"><span>HAS EXPORTS</span><span class="<%= text_color_from_boolean(@current_plan.has_exports)%> text-white px-2"><%= boolean_to_yes_no(@current_plan.has_exports) %></span></span>
            <span class="my-1 d-flex align-items-center justify-content-between"><span>HAS BREAKDOWN</span><span class="<%= text_color_from_boolean(@current_plan.has_breakdown)%> text-white px-2"><%= boolean_to_yes_no(@current_plan.has_breakdown) %></span></span>
            <span class="my-1 d-flex align-items-center justify-content-between"><span>HAS CSV IMPORT</span><span class="<%= text_color_from_boolean(@current_plan.has_csv_import)%> text-white px-2"><%= boolean_to_yes_no(@current_plan.has_csv_import) %></span></span>
          </div>
          <a href="/billing" class="btn btn-secondary form-control bg-secondary text-white mt-4">Stay On Current Plan</a>
        </div>
      </div>
      <div class="col-sm-2 text-center">
      </div>
      <div class="col-sm-5">
        <div class="bg-white rounded border shadow p-3">
          <div class="d-flex flex-column">
            <span class="fs-3">Moving to</span>
            <span><%= @new_plan.name %></span>
            <hr />
            <span class="d-flex align-items-center justify-content-between"><span>PRICE</span><span class="fs-4 fw-bolder">$<%= @new_plan.price/100 %></span></span>
            <span class="my-1 d-flex align-items-center justify-content-between"><span>HAS EXPORTS</span><span class="<%= text_color_from_boolean(@new_plan.has_exports)%> text-white px-2"><%= boolean_to_yes_no(@new_plan.has_exports) %></span></span>
            <span class="my-1 d-flex align-items-center justify-content-between"><span>HAS BREAKDOWN</span><span class="<%= text_color_from_boolean(@new_plan.has_breakdown)%> text-white px-2"><%= boolean_to_yes_no(@new_plan.has_breakdown) %></span></span>
            <span class="my-1 d-flex align-items-center justify-content-between"><span>HAS CSV IMPORT</span><span class="<%= text_color_from_boolean(@new_plan.has_csv_import)%> text-white px-2"><%= boolean_to_yes_no(@new_plan.has_csv_import) %></span></span>
          </div>
          <%= form_for(App.find(params[:app_id])) do |form| %>
            <%= form.hidden_field :current_plan, value: @new_plan.id %>
            <%= form.hidden_field :update_tag, value: 'update_plan' %>
            <%= form.submit "Update Plan", class: "form-control btn btn-primary btn-lg mt-4" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-sm-1"></div>
</div>
